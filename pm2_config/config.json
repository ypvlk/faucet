{
    "apps" : [
        {
        "name"        : "faucet-worker",
        "script"      : "./main.js",
        "args"        : "faucet -m production",
        "exec_mode"   : "cluster",
        "interpreter_args": "--max-old-space-size=512", 
        "instances" : 1,
        "watch"     : false,
        "merge_logs" :true,
        "ignore_watch": ["node_modules", "logs", "var", "web"],
        "max_memory_restart": "512M",
        "pid_file"   : "logs/info-pm2.log"
    }
    ]
}